{
  "manifest_version": 3,
  "name": "Smart History",
  "version": "1.0",
  "description": "AI-powered web journey summarizer that creates intelligent summaries of your browsing",
  "permissions": [
    "activeTab",
    "storage",
    "history",
    "scripting",
    "alarms"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "View Daily Summary",
    "default_icon": "icons/icon.png"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
